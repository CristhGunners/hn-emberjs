<article class="story">
  {{#if (eachcounter index)}}
    <div class="story__number">
      {{eachcounter index}}
    </div>
  {{/if}}
  <div class="story__button">
    <a class="story__vote {{if isVoteUp "story__vote--active"}}" onclick={{action (action "voteAdd" story )}}>&#9650;</a>
  </div>
  <div class="story__content">
    <h3 class="story__title"><a href="{{story.attributes.url}}" target="_blank">{{story.attributes.title}}({{get-domain story.attributes.url}})</a></h3>
    <ul class="story__info">
      <li>{{pluralize story.attributes.votes "point"}}</li>
      <li>by {{story.attributes.user}}</li>
      <li>{{moment-from-now story.attributes.createdAt}}</li>
      <li>{{#link-to 'stories.story.show' story.attributes.id }}{{pluralize story.relationships.comments.data.length "comment"}}{{/link-to}}</li>
    </ul>
  </div>
</article>
