<form class="story__form" autocomplete="off" {{action 'save' model on='submit'}}>
  <p>
    <label for="">Comment: </label>
    {{textarea type="text" required="true" value=formText}}
  </p>
  <br>
  <p>
    <label for="">Username: </label>
    {{input type="text" required="true" value=formUsername}}
  </p>
  <p>
    <button>Send</button>
  </p>
</form>
