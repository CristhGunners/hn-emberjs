<form class="story__form" autocomplete="off" {{action 'save' on='submit'}}>
  <p>
    <label for="">Title: </label>
    {{input type="text" required="true" value=formTitle}}
  </p>
  <br>
  <p>
    <label for="">URL: </label>
    {{input type="url" required="true" value=formURL
      pattern="https?:\/\/(?![^\/]{253}[^\/])((?!-.*|.*-\.)([a-zA-Z0-9-]{1,63}\.)+[a-zA-Z]{2,15}|((1[0-9]{2}|[1-9]?[0-9]|2([0-4][0-9]|5[0-5]))\.){3}(1[0-9]{2}|[1-9]?[0-9]|2([0-4][0-9]|5[0-5])))(\/.*)?"}}
  </p>
  <p>
    <button>Save</button>
  </p>
</form>
